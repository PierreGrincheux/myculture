<h1> Liste des serre </h1>
<table class="table table-stripped">
	<th> ID </th>
	<th> Numéro de série </th>
	<th> Nom </th>
	<th colspan='3'> Actions </th>

	<% unless @all_greenhouses.blank? %>
		<% @all_greenhouses.each do |t| %>
			<tr>
				<td>
					<%= t.id.to_s %>
				</td>
				<td>
					<%= t.serial_nbr.to_s %>
				</td>
				<td>
					<%= t.name.to_s %>
				</td>
				<td>
								<%= link_to "Voir", admin_greenhouse_path(t) %>
				</td>
				<td>
								<%= button_to "Supprimer", admin_greenhouse_path(t), method: :delete,  data: {confirm: "Êtes-vous sûre ?"} %>
				</td>
			</tr>
		<% end %>
	<% else %>
		<tr>
			<td colspan='4'>
				Aucune serre de disponible
			</td>
		</tr>
	<% end %>
</table>

<%= link_to "Ajouter une serre", new_admin_greenhouse_path %>
