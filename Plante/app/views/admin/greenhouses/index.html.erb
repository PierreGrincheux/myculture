<div class="row center-row" >
	<div class="col-md-12">
<h1> Liste des Serres </h1>
<table class="table table-hover table-stripped white-back">
	<thead>
		<th> ID </th>
		<th> Numéro de série </th>
		<th> Nom </th>
		<th> Liée à une école </th>
		<th colspan='3'> Actions </th>
	</thead>
	<tbody>
	<% unless @all_greenhouses.blank? %>
		<% @all_greenhouses.each do |t| %>
			<tr>
				<td>
					<%= t.id.to_s %>
				</td>
				<td>
					<%= t.serial_nbr.to_s %>
				</td>
				<td>
					<%= t.name.to_s %>
				</td>
				<td>
					<% unless t.school_id.blank? %>
						OUI
					<% else %>
						NON
					<% end %>
				</td>
				<td>
								<%= link_to "Voir", admin_greenhouse_path(t) %>
				</td>
				<td>
								<%= button_to "Supprimer", admin_greenhouse_path(t), method: :delete,  data: {confirm: "Êtes-vous sûre ?"},class: 'btn btn-warning'  %>
				</td>
			</tr>
		<% end %>
	<% else %>
		<tr>
			<td colspan='4'>
				Aucune serre de disponible
			</td>
		</tr>
	<% end %>
</tbody>
</table>

<%= link_to "Ajouter une serre", new_admin_greenhouse_path %>
</div>
</div>
