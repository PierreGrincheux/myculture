<div class="row">
	<div class="col-md-4 col-md-offset-4 transparent-co" style="text-align: center">
<h1> Ajout d'une nouvelle école </h1>

<%= form_for @school, url: "create", method: :post do |f| %>
	<div class="form-group col-md-12">
		<%= f.label :name, "Nom de l'école", :class => "scol-sm-2 control-label" %> : <%= f.text_field :name, autofocus: true %><br/>
		---<br/>
		</div>
		<div class="form-group col-md-12">
		<%= f.label :adress, "Adresse", :class => "scol-sm-2 control-label" %> : <%= f.text_field :adress, autofocus: true %><br/>
		</div>
		<div class="form-group col-md-12">
		<%= f.label :town, "Ville", :class => "scol-sm-2 control-label" %> : <%= f.text_field :town, autoficus: true %><br/>
		</div>
		<div class="form-group col-md-12">
		<%= f.label :zip_code, "Code Postal", :class => "scol-sm-2 control-label" %> : <%= f.text_field :zip_code, autofocus: true %><br/>
		---<br/>
		</div>
		<div class="form-group col-md-12">
		<%= f.label :contact, "Nom du contact" %> : <%= f.text_field :contact, autofocus: true %><br/>
		</div>
		<div class="form-group col-md-12">
		<%= f.label :phone_number, "Numéro de téléphone" %> : <%= f.telephone_field :phone_number, autofocus: true %><br/>
		</div>
		<div class="form-group col-md-12">
		<%= f.label :email, "Adresse mail" %> : <%= f.email_field :email, autofocus: true %><br/>
		</div>

		<%= f.submit "Créer",class: 'btn btn-default' %>
		<%= render partial: "return_link" %>
	</div>
<% end %>


</div>
</div>