<h1> Supports éducatifs </h1>
<br/><br/>

<% @media_files.each do |media_file| %>
 <div class="well">
	<h2><%= media_file.title.capitalize %>&nbsp &nbsp<small>Ajouté le <%= convert_date_short(media_file.created_at) %></small></h2>
	<hr/>

	<table class="table">
		<tr>
			<td class="col-md-6">
				<h3>Description :</h3>
				<%= media_file.description %>
			</td>
			<td class="col-md-6">
				<h3> Télécharger <i><%= media_file.attachement.to_s.split('/')[-1] %></i> :</h3>
				<%= link_to media_file.attachement_url, class: "btn btn-primary" do %>
					<span class="glyphicon glyphicon-save" aria-hidden="true"></span> Télécharger
				<% end %>
			</td>
		</tr>
	</table>
	<br/>
 </div>
<% end %>
