<% if !@media_file.errors.empty? %>
  <div class = "alert alert-error">
      
		<ul>
			<% @media_file.errors.full_messages.each do |msg| %>
			  <li><%= msg %></li>
			<% end %>
		</ul>
					       
	</div>
<% end %>


<div class = "well">
	<h1> Importer un nouveau fichier </h1><br/><br/>
	<%= form_for @media_file, url: teacher_media_file_handlers_path, html: { multipart: true } do |f| %>
					<%= f.label :title, "Titre :", :class => "col-md-3" %><%= f.text_field :title, :class => "col-md-3" %><br/><br/>
					<%= f.label :description, "Description :", :class => "col-md-3" %><%= f.text_area :description, :class => "col-md-3" %><br/><br><br/><br/>
					<%= f.label :attachement, "Fichier Ã  ajouter :", :class => "col-md-3" %><%= f.file_field :attachement, :class => "col-md-3" %><br/><br><br/><br/>
					<%= f.submit "Enregistrer", class: "btn btn-primary" %>
	<% end %>
</div>
